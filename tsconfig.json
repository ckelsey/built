{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "webworker"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": true,
        "declaration": false
    },
    "include": [
        "./src/**/**/*.ts",
        "./types.d.ts",
        "./html.d.ts",
        "./typings.d"
    ],
    "exclude": [
        "node_modules"
    ]
}